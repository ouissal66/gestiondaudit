{% extends 'base.html.twig' %}

{% block title %}Assistant IA{% endblock %}

{% block body %}
<div class="container-fluid">

    

<style>
    /* Floating Chatbot Styles */
    #chatbot-wrapper {
        position: fixed;
        top: 160px;
        right: 30px;
        width: 350px;
        z-index: 1050;
        transition: all 0.3s ease;
    }
    #chatbot-wrapper.minimized {
        width: 250px;
        top: 100px;
        right: 20px;
    }
    #chatbot-wrapper.minimized .card-body, 
    #chatbot-wrapper.minimized .card-footer,
    #chatbot-wrapper.minimized #suggested-questions {
        display: none !important;
    }
    #chatbot-toggle {
        cursor: pointer;
    }
    .cursor-pointer {
        cursor: pointer;
    }
    /* Full screen list adjustments */
    .recommendation-card {
        min-height: calc(100vh - 200px);
    }
</style>

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Recommandations</h1>
    </div>

    <div class="row">
        <!-- List of Recent Recommendations - FULL WIDTH -->
        <div class="col-12 mb-4">
            <div class="card shadow mb-4 recommendation-card">
                <div class="card-header py-3 bg-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-list mt-1 mr-2"></i>Dernières Recommandations Générées</h6>
                    <button type="button" class="btn btn-sm btn-primary shadow-sm" data-toggle="modal" data-target="#recommendationModal">
                        <i class="fas fa-magic fa-sm mr-1"></i> Générer
                    </button>
                </div>

                {{ include('recommendation/_modal.html.twig', {'reports_list': reports}) }}
                <div class="card-body">
                    {% if recommendations is defined and recommendations|length > 0 %}
                        <div class="list-group">
                            {% for rec in recommendations %}
                                <div class="list-group-item list-group-item-action flex-column align-items-start border-left-primary mb-3 shadow-primary rounded-lg ajax-delete-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1 text-primary">{{ rec.report.title }}</h5>
                                        <div class="text-right">
                                            <small class="d-block font-weight-bold">{{ rec.createdAt|date('d/m/Y H:i') }}</small>
                                            <div class="d-flex align-items-center">
                                                <a href="{{ path('app_recommendation_show', {'id': rec.id}) }}" class="btn btn-link text-info p-0 border-0 mr-2" title="Voir les détails">
                                                    <i class="fas fa-eye fa-sm"></i>
                                                </a>
                                                <a href="{{ path('app_recommendation_edit', {'id': rec.id}) }}" class="btn btn-link text-primary p-0 border-0 mr-2" title="Modifier">
                                                    <i class="fas fa-edit fa-sm"></i>
                                                </a>
                                                <form method="post" action="{{ path('app_recommendation_delete', {'id': rec.id}) }}" class="ajax-delete-form" data-confirm="Êtes-vous sûr de vouloir supprimer cette recommandation ?">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rec.id) }}">
                                                    <button class="btn btn-link text-danger p-0 border-0" title="Supprimer">
                                                        <i class="fas fa-trash-alt fa-sm"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <p class="mb-2 text-dark" style="font-size: 1.05rem;">{{ rec.content|raw|nl2br }}</p>
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <small class="text-muted"><i class="fas fa-file-alt mr-1"></i> Rapport #{{ rec.report.id }} - <span class="badge badge-info text-white">Score: {{ rec.report.score }}/100</span></small>
                                        <a href="{{ path('app_report_show', {'id': rec.report.id}) }}" class="btn btn-sm btn-outline-primary py-0">Voir le rapport</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-robot fa-3x text-gray-300 mb-3"></i>
                            <p class="text-muted m-0">Aucune recommandation n'a encore été générée. Utilisez le chatbot pour analyser vos données.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Floating Chatbot Widget -->
        <div id="chatbot-wrapper" class="minimized">
            <div class="card shadow border-bottom-primary">
                <div class="card-header py-3 bg-gradient-primary d-flex flex-row align-items-center justify-content-between" id="chatbot-toggle">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-robot mr-2"></i>Assistant AuditAI</h6>
                    <div class="chatbot-icons text-white">
                        <i class="fas fa-chevron-up toggle-icon"></i>
                    </div>
                </div>
                <div class="card-body d-flex flex-column" style="height: 400px;">
                    <div id="chat-box" class="flex-grow-1 mb-3" style="overflow-y: auto; padding-right: 10px;">
                        <!-- Welcome Message -->
                        <div class="d-flex flex-row justify-content-start mb-4">
                            <div class="p-3 bg-gray-200 text-gray-900 rounded-lg shadow-sm" style="max-width: 85%; border-left: 4px solid #4e73df;">
                                <strong>Assistant AuditAI</strong><br>
                                Comment puis-je vous aider aujourd'hui ?
                            </div>
                        </div>
                    </div>

                    <!-- Suggested Questions -->
                    <div class="mb-2" id="suggested-questions">
                        <div class="d-flex flex-wrap">
                            <span class="badge badge-pill badge-light border text-primary p-2 mr-1 mb-1 suggested-q" style="cursor: pointer; font-size: 0.75rem;">Critiques</span>
                            <span class="badge badge-pill badge-light border text-primary p-2 mr-1 mb-1 suggested-q" style="cursor: pointer; font-size: 0.75rem;">Scores faibles</span>
                            <span class="badge badge-pill badge-light border text-primary p-2 mr-1 mb-1 suggested-q" style="cursor: pointer; font-size: 0.75rem;">Aide</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <div class="input-group">
                        <input type="text" id="user-input" class="form-control bg-light border-0 small" placeholder="Poser une question..." aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button" id="send-btn">
                                <i class="fas fa-paper-plane fa-sm"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Chatbot initialization logic
            const sendBtn = document.getElementById('send-btn');
        const userInput = document.getElementById('user-input');
        const chatBox = document.getElementById('chat-box');

        function appendMessage(text, sender) {
            const div = document.createElement('div');
            div.classList.add('d-flex', 'flex-row', 'mb-4');
            
            const messageContent = document.createElement('div');
            messageContent.classList.add('p-3', 'rounded-lg', 'shadow-sm');
            messageContent.style.maxWidth = '85%';
            
            if (sender === 'bot') {
                // Convert markdown-style to HTML
                let formattedText = text.replace(/\n/g, '<br>');
                formattedText = formattedText.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
                formattedText = formattedText.replace(/> (.*?)(<br>|$)/g, '<blockquote class="border-left pl-2 text-muted" style="margin-bottom: 0;">$1</blockquote>');
                messageContent.innerHTML = formattedText;
                div.classList.add('justify-content-start');
                messageContent.classList.add('bg-white', 'text-gray-900', 'border-left-primary');
                messageContent.style.borderLeft = '4px solid #4e73df';
            } else {
                messageContent.textContent = text;
                div.classList.add('justify-content-end');
                messageContent.classList.add('bg-primary', 'text-white');
            }

            div.appendChild(messageContent);
            chatBox.appendChild(div);
            // Auto scroll to bottom
            setTimeout(() => {
                chatBox.scrollTop = chatBox.scrollHeight;
            }, 50);
        }

        async function handleSend(forcedQuery = null) {
            const text = forcedQuery || userInput.value.trim();
            if (text === '' && !forcedQuery) return;

            // User message
            appendMessage(text, 'user');
            if (!forcedQuery) userInput.value = '';

            // Show loading
            const loadingId = 'loading-' + Date.now();
            const loadingDiv = document.createElement('div');
            loadingDiv.id = loadingId;
            loadingDiv.classList.add('d-flex', 'flex-row', 'mb-4', 'justify-content-start');
            loadingDiv.innerHTML = '<div class="p-3 bg-gray-200 text-gray-900 rounded-lg shadow-sm"><i class="fas fa-spinner fa-spin mr-2"></i>Analyse de vos données...</div>';
            chatBox.appendChild(loadingDiv);
            chatBox.scrollTop = chatBox.scrollHeight;

            try {
                const response = await fetch('/recommendation/ask', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ message: text })
                });

                const data = await response.json();
                
                // Remove loading
                const loadingEl = document.getElementById(loadingId);
                if (loadingEl) loadingEl.remove();
                
                // Show bot response
                appendMessage(data.response, 'bot');

            } catch (error) {
                const loadingEl = document.getElementById(loadingId);
                if (loadingEl) loadingEl.remove();
                appendMessage("Désolé, une erreur est survenue lors de la communication avec le serveur.", 'bot');
                console.error('Error:', error);
            }
        }

        sendBtn.addEventListener('click', () => handleSend());
        userInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') handleSend();
        });

        // Handle chatbot toggle
        const chatbotWrapper = document.getElementById('chatbot-wrapper');
        const chatbotToggle = document.getElementById('chatbot-toggle');
        const toggleIcon = document.querySelector('.toggle-icon');

        chatbotToggle.addEventListener('click', function() {
            chatbotWrapper.classList.toggle('minimized');
            if (chatbotWrapper.classList.contains('minimized')) {
                toggleIcon.classList.replace('fa-chevron-down', 'fa-chevron-up');
            } else {
                toggleIcon.classList.replace('fa-chevron-up', 'fa-chevron-down');
            }
        });

        // Open chat if suggested question is clicked while minimized
        document.querySelectorAll('.suggested-q').forEach(badge => {
            badge.addEventListener('click', function() {
                if (chatbotWrapper.classList.contains('minimized')) {
                    chatbotWrapper.classList.remove('minimized');
                    toggleIcon.classList.replace('fa-chevron-up', 'fa-chevron-down');
                }
                handleSend(this.textContent);
            });
        });
    });
</script>
{% endblock %}
