{% extends 'base.html.twig' %}

{% block title %}Modifier la Recommandation{% endblock %}

{% block body %}
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Modifier la Recommandation</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-edit mr-1"></i> Edition pour : {{ recommendation.report.title }}
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'id': 'recommendation-form', 'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group mb-4">
                            {{ form_label(form.content) }}
                            {{ form_widget(form.content, {'id': 'recommendation-editor'}) }}
                            {{ form_errors(form.content) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_recommendation') }}" class="btn btn-secondary shadow-sm">
                                <i class="fas fa-arrow-left fa-sm mr-1"></i> Annuler
                            </a>
                            <button class="btn btn-primary shadow-sm" type="submit">
                                <i class="fas fa-save fa-sm mr-1"></i> Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
            
            <div class="alert alert-info shadow-sm">
                <h5><i class="fas fa-magic mr-2"></i>Ã‰dition Visuelle Active</h5>
                <p class="mb-0">Utilisez la barre d'outils ci-dessus pour formater vos conseils. L'IA se chargera de conserver la structure lors de l'exportation PDF.</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#recommendation-editor'), {
                toolbar: ['heading', '|', 'bold', 'italic', 'link', 'bulletedList', 'numberedList', 'blockQuote', 'undo', 'redo'],
            })
            .catch(error => {
                console.error(error);
            });
    </script>
{% endblock %}
