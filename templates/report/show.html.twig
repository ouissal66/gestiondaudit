{% extends 'base.html.twig' %}

{% block title %}Rapport{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Rapport #{{ report.id }}</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">{{ report.title }}</h6>
                <div>
                     {% if report.status == 'Validé' %}
                        <span class="badge badge-success">{{ report.status }}</span>
                    {% elseif report.status == 'En cours' %}
                        <span class="badge badge-primary">{{ report.status }}</span>
                    {% elseif report.status == 'Critique' %}
                        <span class="badge badge-danger">{{ report.status }}</span>
                    {% else %}
                        <span class="badge badge-secondary">{{ report.status }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Type:</strong> {{ report.type }}</p>
                        <p><strong>Priorité:</strong> {{ report.priority|default('Non définie') }}</p>
                        <p><strong>Score:</strong> {{ report.score is not null ? report.score ~ '/100' : 'Non évalué' }}</p>
                        <p><strong>Date Validation:</strong> {{ report.validationDate ? report.validationDate|date('d/m/Y') : 'Non validé' }}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Création:</strong> {{ report.createdAt ? report.createdAt|date('d/m/Y H:i') : '' }}</p>
                        <p><strong>Mise à jour:</strong> {{ report.updatedAt ? report.updatedAt|date('d/m/Y H:i') : '' }}</p>
                    </div>
                </div>
                
                <hr>
                <h5 class="font-weight-bold">Description</h5>
                <div class="report-content">
                    {{ report.description|nl2br }}
                </div>
                
                <hr>
                
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Recommandation AI</h6>
                    </div>
                    <div class="card-body">
                        {% if report.recommendations|length > 0 %}
                            <div class="alert alert-info">
                                <i class="fas fa-robot"></i> <strong>Historique des Conseils :</strong>
                                <ul class="mt-2 mb-0 pl-3">
                                    {% for recommendation in report.recommendations %}
                                        <li class="mb-3 border-bottom pb-2 ajax-delete-item">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <small class="text-muted font-weight-bold">{{ recommendation.createdAt|date('d/m/Y H:i') }}</small><br>
                                                    <p class="mb-2 text-dark" style="font-size: 1.05rem;">{{ recommendation.content|raw|nl2br }}</p>
                                                </div>
                                                <form method="post" action="{{ path('app_recommendation_delete', {'id': recommendation.id}) }}" class="ajax-delete-form" data-confirm="Supprimer ce conseil ?">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recommendation.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger border-0" title="Supprimer">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% else %}
                            <p class="text-muted">Aucune recommandation générée pour le moment.</p>
                        {% endif %}

                        <form action="{{ path('app_report_recommend', {'id': report.id}) }}" method="post">
                            <button class="btn btn-primary">
                                <i class="fas fa-magic"></i> Générer une recommandation
                            </button>
                        </form>
                    </div>
                </div>

                <hr>
                <a href="{{ path('app_report_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_report_edit', {'id': report.id}) }}" class="btn btn-warning">Modifier</a>
                <a href="{{ path('app_report_pdf', {'id': report.id}) }}" class="btn btn-danger">
                    <i class="fas fa-file-pdf"></i> Télécharger PDF
                </a>
                
                <div class="mt-3 d-inline-block">
                    {{ include('report/_delete_form.html.twig', {'redirect': path('app_report_index')}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
